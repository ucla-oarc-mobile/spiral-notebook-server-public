{
  "routes": [
    {
      "method": "GET",
      "path": "/subjects",
      "handler": "subject.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/subjects/count",
      "handler": "subject.count",
      "config": {
        "policies": ["global::forbidden"]
      }
    },
    {
      "method": "GET",
      "path": "/subjects/:id",
      "handler": "subject.findOne",
      "config": {
        "policies": ["global::forbidden"]
      }
    },
    {
      "method": "POST",
      "path": "/subjects",
      "handler": "subject.create",
      "config": {
        "policies": ["global::forbidden"]
      }
    },
    {
      "method": "PUT",
      "path": "/subjects/:id",
      "handler": "subject.update",
      "config": {
        "policies": ["global::forbidden"]
      }
    },
    {
      "method": "DELETE",
      "path": "/subjects/:id",
      "handler": "subject.delete",
      "config": {
        "policies": ["global::forbidden"]
      }
    }
  ]
}
